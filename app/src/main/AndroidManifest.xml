<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SemesterProject"
        tools:targetApi="31">

        <!-- Only MainScreen is launcher -->
        <activity
            android:name=".MainScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- All other activities, remove intent filters -->
        <activity android:name=".MainActivity" android:exported="true"/>
        <activity android:name=".AdminLoginScreen" android:exported="true"/>
        <activity android:name=".UserLoginScreen" android:exported="true"/>
        <activity android:name=".UserSignUpForm" android:exported="true"/>
        <activity android:name=".AdminDashboard" android:exported="true"/>
        <activity android:name=".AddParty" android:exported="true"/>
        <activity android:name=".CastVote" android:exported="true"/>
        <activity android:name=".CheckVotes" android:exported="true"/>
        <activity android:name=".Announcements" android:exported="true"/>
        <activity android:name=".UpdateProfile" android:exported="true"/>
        <activity android:name=".OTPVerfication" android:exported="true"/>
        <activity android:name=".SaveCastedVote" android:exported="true"/>
    </application>
</manifest>